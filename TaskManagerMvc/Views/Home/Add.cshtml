@model TaskManagerRepository.Tables.Task

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" data-ajax="true">

    <div class="form-group">
        <label>Description</label>
        <input type="text" asp-for="Description" />
        <span asp-validation-for="Description" style="color:red"></span>
    </div>

    <div class="form-group">
        <label>Start</label>
        <input type="text" asp-for="Start" />
        <span asp-validation-for="Start" style="color:red"></span>
    </div>

    <div class="form-group">
        <label>End</label>
        <input type="text" asp-for="End" />
        <span asp-validation-for="End" style="color:red"></span>
    </div>

    <div class="form-group">
        <label>AllDay</label>
        <input type="checkbox" asp-for="AllDay" />
        <span asp-validation-for="AllDay" style="color:red"></span>
    </div>

    <div class="form-group">
        <label>Important</label>
        <input type="checkbox" asp-for="Important" />
        <span asp-validation-for="Important" style="color:red"></span>
    </div>

    <hr />

    <button class="btn btn-info" type="submit">Save</button>
</form>

